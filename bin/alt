#!/usr/bin/env ruby

$:.unshift(File.expand_path("../../lib", __FILE__))

require "pp"
require "alt"
require "readline"

stty_save = `stty -g`.chomp
trap("INT") { system "stty", stty_save; exit }

if file = ARGV.first
  pp Alt.ast(File.read(file))
else
  puts "alt #{Alt::VERSION}"
  while line = Readline::readline(">> ", true)
    pp Alt.ast(line)
  end
end